<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/exercise_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise Name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/exercise_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:layout_below="@id/exercise_name"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/exercise_muscle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muscle"
            android:layout_below="@id/exercise_type"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/exercise_equipment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equipment"
            android:layout_below="@id/exercise_muscle"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/exercise_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Difficulty"
            android:layout_below="@id/exercise_equipment"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/exercise_instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instructions"
            android:layout_below="@id/exercise_difficulty"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/start_timer_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Timer"
            android:layout_below="@id/bookmark_button"
            android:layout_marginTop="16dp"
            android:onClick="startTimer"/>


        <TextView
            android:id="@+id/timer_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:layout_below="@id/exercise_instructions"
            android:layout_marginBottom="8dp"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/bookmark_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bookmark"
            android:layout_below="@id/timer_text_view" />
    </RelativeLayout>
</ScrollView>
